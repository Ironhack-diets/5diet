<div class="wrapper-profile pagination-centered">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="">
          <div class="header-user">

            <!-- http://lorempixel.com/850/280/people/9/ -->

          <div class="useravatar">
            <img alt="" width="100px"src="/uploads/<%=user.picture%>">
          </div>
          <div class="card-info"> <span class="card-title"><%= user.username %></span>

          </div>
          </div>
        </div>
        <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <button type="button" id="userData" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <div class="hidden-xs">User info</div>
            </button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">Diets</div>
            </button>
          </div>
        </div>

        <div class="well">
          <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
              <% if( session && session._id == user._id) { %>
                <form class="" id="edituser" action="/user/<%=user._id%>/edit" method="post" enctype="multipart/form-data">

                  <h4>Firstname: </h4><input type="text" name="name" value="<%= user.name %>">
                  <h4>Lastname: </h4><input type="text" name="lastname" value="<%= user.lastname %>">
                  <h4>Site: </h4><input type="text" name="personalWeb" value="<%= user.personalWeb %>">
                  <h4>Photo: </h4><input class="photoInput" value="<%= user.picture %>" type="file" name="photo">
                  <h4>Email: </h4><input type="email" name="email" value="<%= user.email %>">
                  <h4>Description: </h4> <textarea name="description" form="editform" value="<%= user.description %>"></textarea>
                  <input type="submit" name="" value="Guardar Cambios">
                </form>
                <% }else{ %>
                  <h4>Firstname: <%= user.name %></h4>
                  <h4>Lastname: <%=user.lastname%></h4>
                  <h4>Site: <%= user.personalWeb %></h4>
                  <h4>Email: <%= user.email %></h4>
                  <h4>Description: <%= user.description %></h4>
                  <% } %>

            </div>
            <div class="tab-pane fade in" id="tab2">
              <h1>Mis dietas</h1>
              <% diets.forEach((d) => { %>
                <div class="diet">
                  <div class="container-fluid well span6">
                    <div class="row-fluid">
                      <div class="span2">
                        <img width="100px"src="/uploads/<%=d.picture%>" class="img-circle">
                      </div>

                      <div class="span8">
                        <h3>Nombre: <%=d.name %></h3>
                        <h6>Categorias: <%=d.categories %></h6>
                        <h6>Objetivo: <%=d.aim %></h6>
                        <h6><a href="/diets/<%=d._id %>">More... </a></h6>
                        <h6><a href="/diets/<%=d._id %>/recipes">Show recipes</a></h6>

                      </div>
                      <% if( session && session._id == user._id) { %>
                      <form class="" action="/diets/<%=d._id%>/delete" method="post">
                      <button class="btn-lgn red" id="btnlogin" type="submit">Delete</button>
                      </form>

                      <a href="/diets/<%=d._id%>/edit" class="btn-lgn red" id="btnlogin">Edit</a>
                        <% }%>
                    </div>
                  </div>

                  <%  }) %>
                </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
