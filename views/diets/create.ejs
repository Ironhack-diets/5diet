<div class="wrapper-login">
  <form class="form-signin" action="/auth/signup" method="POST">
    <h2 class="form-signin-heading">Create your Diet</h2>

    <input type="text" class="form-control" name="name" placeholder="Mi nueva dieta" required="" autofocus="" />

    <input type="text" class="form-control" name="categories" placeholder="#Mediterranea #Proteinica" required="" />

    <input type="text" class="form-control" name="aim" placeholder="Perder grasa, ganar musculatura" required="" autofocus="" />

    <input type="email" class="form-control" name="email" placeholder="Email" required="" />

    <button class="btn btn-lg btn-primary btn-block" id="btnlogin" type="submit">Register</button>
    <% if (typeof message != "undefined") { %>
      <div class="error-message">
        <%= message %>
      </div>
      <% } %>
  </form>

</div>
