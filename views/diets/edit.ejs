<div class="wrapper-login pagination-centered">
  <div class="container" id="dietform">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <form class="form-diet" id="newDiet" action="/diets/new" method="POST" enctype="multipart/form-data">
          <h2 class="form-signin-heading">Edita tu dieta</h2>

          <label for="name">Nombre:</label>
          <input type="text" class="form-control" name="name" value="<%= diet.name %>" required="" autofocus="" />
          <label for="categories">Categorias:</label>
          <input type="text" class="form-control" name="categories" value="<%= diet.categories %>" required="" />
          <label for="aim">Objetivo:</label>
          <input type="text" class="form-control" name="aim" value="<%= diet.aim %>" required="" autofocus="" />
          <label for="photo">Foto:</label>
          <input class="photoInput" class="form-control" type="file" name="photo">
          <label for="description">Descripcion:</label><br>
          <textarea class="textDiet"name="description" rows="8" value="<%= diet.description %>" form="newDiet"></textarea>

          <button class="btn btn-lg btn-primary btn-block" id="btnlogin" type="submit">Guardar cambios</button>
          <% if (typeof message != "undefined") { %>
            <div class="error-message">
              <%= message %>
            </div>
            <% } %>
        </form>
      </div>
    </div>
  </div>
</div>
