<div class="jumbotron text-center">
  <h1 class= "title"><%= diet.name%></h1>
  <p class = "subtitle">Creada por <a class="profileLink" href="/user/<%=diet._creator.id%>"><%= diet._creator.name%></a></p>

</div>

<!-- Container (About Section) -->
<div id="about" class="container-fluid bg-grey">
  <div class="row">
    <div class="col-sm-8">
      <h2>¿Qué voy a conseguir?</h2><br>
      <h4><%= diet.aim%></h4><br>
    </div>
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-record logo"></span>
    </div>
  </div>
</div>

<div class="container-fluid ">
  <div class="row">
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-cutlery logo slideanim"></span>
    </div>
    <div class="col-sm-8">
      <h2>¿Cómo lo conseguiré?</h2><br>
      <h4><strong>MISSION:</strong> <%= diet.description%></h4><br>

  </div>
</div>
</div>

<!-- Container (Portfolio Section) -->
<div id="portfolio" class="container-fluid text-center bg-grey">


  <h2>¿Qué podré comer?</h2>
  <div id="portfolio" class="container-fluid text-center bg-grey">
      <div class="recipes-row row text-center slideanim">


        <% recipes.forEach((r) => { %>
          <div class=" col-sm-4 card">
            <div class="card-img-top">
              <img class="img-fluid"src="/images/recipe1.jpeg" alt="">
            </div>
            <div class="card-block">
              <h4 class="card-title"><%=r.name %></h4>
              <p class="card-text"><%=r.calories%></p>

            </div>
          </div>
    <% } )%>
</div>
</div>
</div>


<div class="text-center">
  <h2 class="comment-title">¿Qué dicen de esta dieta?</h2><br>
  <h4>Comentarios de usuarios que la han probado</h4>

</div>

  <div id="wrapper-comments" class="container">

    <% comments.forEach((c) => { %>

        <div class="row comments pagination-centered">
    <!--    <div class="col-sm-1">
        <div class="comment-image"></div>
        </div> /col-sm-1 -->

        <div class="col-sm-12 pagination-centered" >
        <div class="panel panel-default">
        <div class="panel-heading">
          <a href="/user/<%=c._creator.id %>" class=""> <img width="50" height="50" src="/uploads/<%=c._creator.picture%>" class="img-circle"alt=""> </a>
        <strong>Creado por: <a href="/user/<%=c._creator.id%>"><%=c._creator.name%></a> </strong> <span class="text-muted"> </span>
        </div>
        <div class="panel-body">
          <p><%= c.content %></p>
        </div><!-- /panel-body -->
        </div><!-- /panel panel-default -->
        </div><!-- /col-sm-5 -->

        </div><!-- /row -->
        <% })%>
  </div>


</div>

</div>

<!-- Container (Contact Section) -->
<div id="contact" class="container-fluid ">
  <h2 class="text-center">¿La has probado? Comparte tu opinión</h2>
   <input type="hidden" name="dietId" id="dietId" value="<%= diet.id%>">
  <div class="row">

    <div class="col-sm-12 slideanim">
      <div class="row">
      <form class="" action="index.html" method="post">

      </form>
      <textarea class="form-control" id="commentContent" name="content" placeholder="Comment" rows="5"></textarea><br>
      <div class="row">
        <div class="col-sm-12 form-group">
          <button class="btn-lgn red pull-right" id="createComent" type="submit">Enviar</button>
        </div>
      </div>
    </div>
  </div>
</div>
