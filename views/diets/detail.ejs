<div class="jumbotron text-center">
  <h1 class= "title"><%= diet.name%></h1>
  <p class = "subtitle"></p>

</div>

<!-- Container (About Section) -->
<div id="about" class="container-fluid bg-grey">
  <div class="row">
    <div class="col-sm-8">
      <h2>¿Qué voy a conseguir?</h2><br>
      <h4><%= diet.aim%></h4><br>
    </div>
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-record logo"></span>
    </div>
  </div>
</div>

<div class="container-fluid ">
  <div class="row">
    <div class="col-sm-4">
      <span class="glyphicon glyphicon-cutlery logo slideanim"></span>
    </div>
    <div class="col-sm-8">
      <h2>¿Cómo lo conseguiré?</h2><br>
      <h4><strong>MISSION:</strong> <%= diet.description%></h4><br>

  </div>
</div>
</div>

<!-- Container (Portfolio Section) -->
<div id="portfolio" class="container-fluid text-center bg-grey">


  <h2>¿Qué podré comer?</h2>
  <div id="myCarousel" class="carousel slide text-center " data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <%var i = 0; %>
        <% recipes.forEach((r) => { %>

      <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>

    <%i++ } )%>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% recipes.forEach((r) => { %>
      <div class="item active">
          <img class="item-image"src="/images/recipe3.jpeg" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h3>Nombre: <%=r.name %></h3>
            <p>Ingredientes: <%=r.ingredients %></p>
            <p>Comensales: <%=r.people %></p>
            <div class="bottom-label">

              <p>creado por Antonio P.</p>
            </div>
          </div>
      </div>
          <% } )%>
  </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

